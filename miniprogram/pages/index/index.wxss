.container {
  height: 100%;
}
.main {
  flex: 1;
  background: #0E0E16;
  display: flex;
  flex-direction: column;
}

.card {
  margin: 30rpx;
  height: 200rpx;
}

.card {
  color: #fff;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card__red {
  background: #953032;
  box-shadow: 0 0 30rpx 0rpx #953032;
}
.card__blue {
  background: #225E7E;
  box-shadow: 0 0 30rpx 0rpx #225E7E;
}
.card__green {
  background: #5A7944;
  box-shadow: 0 0  30rpx 0rpx #5A7944;
}
.card__black {
  background: #332C2F;
  box-shadow: 0 0  30rpx 0rpx #332C2F;
}
.card__item {
  background: #D28F33;
  box-shadow: 0 0  30rpx 0rpx #D28F33;
}
.card__basis {
  background: #6F6C68;
  box-shadow: 0 0  30rpx 0rpx #6F6C68;
}